#include "HttpGetHandoutFriendsTask.h"

HttpGetHandoutFriendsTask::HttpGetHandoutFriendsTask() {
	// TODO Auto-generated constructor stub
	mPath = LIVEROOM_GETHANGOUTFRIENDS;

}

HttpGetHandoutFriendsTask::~HttpGetHandoutFriendsTask() {
	// TODO Auto-generated destructor stub
}

void HttpGetHandoutFriendsTask::SetCallback(IRequestGetHandoutFriendsCallback* callback) {
	mpCallback = callback;
}

void HttpGetHandoutFriendsTask::SetParam(
                                         const string& anchorId
                                  ) {
	mHttpEntiy.Reset();
	mHttpEntiy.SetSaveCookie(true);
    if (anchorId.length() >  0 ) {
        mHttpEntiy.AddContent(LIVEROOM_GETHANGOUTFRIENDS_ANCHORID, anchorId.c_str());
    }

    FileLog(LIVESHOW_HTTP_LOG,
            "HttpGetHandoutFriendsTask::SetParam( "
            "task : %p, "
            "anchorId : %s,"
            ")",
            this,
            anchorId.c_str()
            );
}


bool HttpGetHandoutFriendsTask::ParseData(const string& url, bool bFlag, const char* buf, int size) {
    FileLog(LIVESHOW_HTTP_LOG,
            "HttpGetHandoutFriendsTask::ParseData( "
            "task : %p, "
            "url : %s, "
            "bFlag : %s "
            ")",
            this,
            url.c_str(),
            bFlag?"true":"false"
            );

    int errnum = LOCAL_LIVE_ERROR_CODE_FAIL;
    string errmsg = "";
    HangoutAnchorList list;
    bool bParse = false;
    
    if ( bFlag ) {
        // 公共解
        Json::Value dataJson;
        Json::Value errDataJson;
        if( ParseLiveCommon(buf, size, errnum, errmsg, &dataJson, &errDataJson) ) {
            if(dataJson.isObject()) {
                if( dataJson[LIVEROOM_GETCANHANGOUTANCHORLIST_LIST].isArray() ) {
                    for (int i = 0; i < dataJson[LIVEROOM_GETCANHANGOUTANCHORLIST_LIST].size(); i++) {
                        HttpHangoutAnchorItem item;
                        item.Parse(dataJson[LIVEROOM_GETCANHANGOUTANCHORLIST_LIST].get(i, Json::Value::null));
                        list.push_back(item);
                    }
                }
            }
            
        }
        bParse = (errnum == LOCAL_LIVE_ERROR_CODE_SUCCESS ? true : false);
        
        
    } else {
        // 超时
        errnum = HTTP_LCC_ERR_CONNECTFAIL;
        errmsg = LOCAL_ERROR_CODE_TIMEOUT_DESC;
    }
    
    if( mpCallback != NULL ) {
        mpCallback->OnGetHandoutFriends(this, bParse, errnum, errmsg, list);
    }
    
    return bParse;
}

