                                  ) {
	mHttpEntiy.Reset();
	mHttpEntiy.SetSaveCookie(true);

    FileLog(LIVESHOW_HTTP_LOG,
            "HttpGetRecentContactAnchorTask::SetParam( "
            "task : %p, "
            ")",
            this
            );
}


bool HttpGetRecentContactAnchorTask::ParseData(const string& url, bool bFlag, const char* buf, int size) {
    FileLog(LIVESHOW_HTTP_LOG,
            "HttpGetRecentContactAnchorTask::ParseData( "
            "task : %p, "
            "url : %s, "
            "bFlag : %s "
            ")",
            this,
            url.c_str(),
            bFlag?"true":"false"
            );

    int errnum = LOCAL_LIVE_ERROR_CODE_FAIL;
    string errmsg = "";
    HttpHangoutList list;
    bool bParse = false;
    
    if ( bFlag ) {
        // 公共解
        Json::Value dataJson;
        Json::Value errDataJson;
        if( ParseLiveCommon(buf, size, errnum, errmsg, &dataJson, &errDataJson) ) {
            if(dataJson.isObject()) {
                if (dataJson[LIVEROOM_GETRECENTCONTACEANCHOR_LIST].isArray()) {
                    for (int i = 0; i < dataJson[LIVEROOM_GETRECENTCONTACEANCHOR_LIST].size(); i++) {
                        HttpHangoutListItem item;
                        item.Parse(dataJson[LIVEROOM_GETRECENTCONTACEANCHOR_LIST].get(i, Json::Value::null));
                        list.push_back(item);
                    }
                }
            }
            
        }
        bParse = (errnum == LOCAL_LIVE_ERROR_CODE_SUCCESS ? true : false);
        
        
    } else {
        // 超时
        errnum = HTTP_LCC_ERR_CONNECTFAIL;
        errmsg = LOCAL_ERROR_CODE_TIMEOUT_DESC;
    }
    
    if( mpCallback != NULL ) {
        mpCallback->OnGetRecentContactAnchor(this, bParse, errnum, errmsg, list);
    }
    
    return bParse;
}

